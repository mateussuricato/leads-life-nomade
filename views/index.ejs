    <script>
      function macara_whatsapp() {
        const whats = document.getElementById("whatsapp");
        if (whats.value.length == 0) {
          whats.value += "(";
        } else if (whats.value.length == 3) {
          whats.value += ") ";
        } else if (whats.value.length == 10) {
          whats.value += "-";
        }
      }

      function macara_datanasc() {
        const data = document.getElementById("datanasc");
        if (data.value.length == 2 || data.value.length == 5) {
          data.value += "/";
        }
      }
    </script>
